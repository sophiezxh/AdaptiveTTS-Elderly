    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastSpeech2 Train",
            "type": "debugpy",
            "request": "launch",
            "program": "src/scripts/train.py",
            "console": "integratedTerminal",
            // 设置当前环境路径为EMITTS/FastSpeech2
            "cwd": "${workspaceFolder}/EMITTS/FastSpeech2",
            // 添加项目路径至path
            "env": {
                "PYTHONPATH": "${workspaceFolder}/EMITTS/FastSpeech2"
            }
        }
    ]
}